# blue
# set $c0 #2662DF
# set $c1 #0E99EE
# set $c2 #FFFFFF
# set $c3 #FFFFFF
set $c0 #eeeeee
set $c1 #a19d95
set $c2 #ffffff
set $c3 #a19d95
set $c4 #F9807A

# class                 border|backgr|text|indicator|child_border
client.focused          $c0     $c0     #000000 $c4 $c0
client.focused_inactive $c3     $c3     $c0 $c4 $c3
client.unfocused        $c1     $c1     $c0 #333333 #333333
client.urgent           #903f3f #ff9f9f #ffffff #903f3f #903f3f

