bar {
    padding -2px 2px
    status_command i3status -c ~/.config/i3status/config
    font pango: Iosevka Nerd Font 10
    strip_workspace_numbers yes
    binding_mode_indicator yes
    workspace_buttons yes
    position top
    mode dock
    workspace_min_width 25
    set $bg #285577
    set $white #ffffff
    colors {
        background $bg
        binding_mode $bg $bg $white
    }
}

