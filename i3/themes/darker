bar {
    padding -2px 2px
    status_command i3blocks -c ~/.config/i3blocks/config
    font pango: Iosevka Nerd Font 10
    strip_workspace_numbers yes
    binding_mode_indicator yes
    workspace_buttons yes
    position bottom
    mode dock
    tray_output primary
    output primary
    workspace_min_width 25
    set $bbg #202020
    set $separator #90f0ff
    set $bfg #ffffff
    set $bifg #888888
    colors {
        background $bbg
        separator  $separator
        statusline $bfg

        # class              border bg fg 
        focused_workspace    $bbg $bbg $bfg
        inactive_workspace   $bbg $bbg $bifg
        active_workspace     $bbg $bbg $bifg
        urgent_workspace     $bbg $bbg $bifg
        binding_mode         $bbg $bbg $bfg
    }
}

set $fbg #202020
set $fborder #202020
set $ffg #ffffff
set $indicator #90f0ff
set $ubg #303030
set $uborder #202020
set $ufg #888888
set $ibg #eeeeee
set $ifg #888888

# class                 border bg fg indicator child_border
client.focused          $fborder $fbg $ffg $findicator $indicator
client.focused_inactive $ibg $ibg $ifg $ibg $ibg
client.unfocused        $ubg $ubg $ufg $ubg $ubg
client.urgent           $ubg $ubg $ufg $ubg $ubg

# vim: ft=i3config
