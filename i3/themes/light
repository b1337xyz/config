bar {
    padding -2px 2px
    status_command i3blocks -c ~/.config/i3blocks/config
    font pango: Iosevka Nerd Font 10
    strip_workspace_numbers yes
    binding_mode_indicator yes
    workspace_buttons yes
    position bottom
    mode dock
    tray_output primary
    output primary
    workspace_min_width 25
    set $bb0 #eeeeee
    set $bb1 #eeeeee
    set $sep #888888
    set $bfg #000000
    set $bifg #888888
    colors {
        background $bb0
        separator  $sep
        statusline $bfg

        # class              border bg fg 
        focused_workspace    $bb1 $bb1 $bfg
        inactive_workspace   $bb1 $bb1 $bifg
        active_workspace     $bb1 $bb1 $bifg
        urgent_workspace     $bb1 $bb1 $bifg
        binding_mode         $bb1 $bb1 $bfg
    }
}


set $fbg #eeeeee
set $fborder #888888
set $ffg #000000
set $indicator #ffffff
set $ubg #aaaaaa
set $uborder #aaaaaa
set $ufg #555555
set $ibg #eeeeee
set $ifg #888888

# class                 border bg fg indicator child_border
client.focused          $fborder $fbg $ffg $indicator $indicator
client.focused_inactive $ibg $ibg $ifg $ibg $ibg
client.unfocused        $ubg $ubg $ufg $ubg $ubg
client.urgent           $ubg $ubg $ufg $ubg $ubg

