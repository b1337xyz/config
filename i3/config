bindcode $mod+84 exec i3_edge.py -r middle
bindcode $mod+85 exec i3_edge.py -r right
bindcode $mod+87 exec i3_edge.py -r bottom-left 
bindcode $mod+88 exec i3_edge.py -r bottom 
bindcode $mod+89 exec i3_edge.py -r bottom-right

mode "resize" {
    bindcode 80 resize shrink height 20 px
    bindcode 83 resize shrink width 20 px
    bindcode 85 resize grow width 20 px
    bindcode 88 resize grow height 20 px
    
    bindsym backslash resize shrink left 20 px
    bindsym h resize shrink width 20 px
    bindsym j resize grow height 20 px
    bindsym k resize shrink height 20 px
    bindsym l resize grow width 20 px

    bindsym Left resize shrink width 20 px
    bindsym Down resize grow height 20 px
    bindsym Up resize shrink height 20 px
    bindsym Right resize grow width 20 px

    bindsym minus resize shrink width 40 px ; resize shrink height 20 px
    bindsym equal resize grow width 40 px ; resize grow height 20 px

    bindcode 19 resize set 902 542

    bindsym q mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

bar {
    font pango: Hack Nerd Font 9

    # i3bar_command i3bar --transparency
    status_command i3blocks -c ~/.config/i3blocks/config
    strip_workspace_numbers yes
    binding_mode_indicator yes
    workspace_buttons yes
    position top
    # dock, hide
    mode dock
    tray_output primary
    output primary

    set $c0 #D27589
    set $c1 #923549
    set $c2 #F699AD
    colors {
        background $c0
        statusline #000000
        separator  #999999

        # class              border background color
        focused_workspace    $c1 $c1 $c2
        inactive_workspace   $c2 $c2 $c1
        active_workspace     $c2 $c2 $c1
        urgent_workspace     $c2 $c2 $c1
        binding_mode         $c2 $c2 $c1
    }
}

