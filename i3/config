set $print_mode [p]rint [f]ocused [c]opy [C]opy-focused [s]elect [S]elect-copy
mode "$print_mode" {
    bindsym p exec print.sh
    bindsym f exec print.sh focused
    bindsym c exec print.sh copy
    bindsym Shift+c exec print.sh copy-focused
    bindsym s exec print.sh select
    bindsym Shift+s exec print.sh copy-select
    
    bindsym q mode "default"
    bindsym Escape mode "default"
    bindsym Return mode "default"
}
bindsym $mod+p mode "$print_mode"

set $launch_mode [a]nime [f]irefox [q]ute [t]elegram [p]ulsemixer [e]xplorer [r]adio
mode "$launch_mode" {
    # bindsym c exec alacritty --class cmus --title cmus -e cmus ; mode "default"
    bindsym e exec pcmanfm; mode "default"
    bindsym a exec alacritty -o window.opacity=1.0 -e fzfanime.sh ; mode "default"
    bindsym f exec firefox ; mode "default"
    bindsym k exec passc.sh ; mode "default"
    bindsym p exec alacritty --class floating_terminal -e pulsemixer ; mode "default"
    bindsym q exec qutebrowser ; mode "default"
    bindsym r exec radio.sh ; mode "default"
    bindsym s exec slideshow.sh ; mode "default"
    bindsym t exec telegram ; mode "default"
    bindsym shift+e exec emoticons.sh ; mode "default"

    bindsym q mode "default"
    bindsym Escape mode "default"
    bindsym Return mode "default"
}
bindsym $mod+o mode "$launch_mode"

set $move_mode move
mode "$move_mode" {
    bindsym h exec i3_edge.py -r left
    bindsym shift+h exec i3_edge.py -r bottom-left
    bindsym j exec i3_edge.py -r bottom 
    bindsym shift+j exec i3_edge.py -r bottom-right
    bindsym k exec i3_edge.py -r top
    bindsym shift+k exec i3_edge.py -r top-left
    bindsym l exec i3_edge.py -r right
    bindsym shift+l exec i3_edge.py -r top-right
    bindsym m exec i3_edge.py -r middle

    bindsym q mode "default"
    bindsym Escape mode "default"
    bindsym Return mode "default"
}
bindsym $mod+m mode "$move_mode"

mode "resize" {
    bindsym backslash resize shrink left 20 px
    bindsym h resize shrink width 20 px
    bindsym j resize grow height 20 px
    bindsym k resize shrink height 20 px
    bindsym l resize grow width 20 px

    bindsym Left resize shrink width 20 px
    bindsym Down resize grow height 20 px
    bindsym Up resize shrink height 20 px
    bindsym Right resize grow width 20 px

    bindsym minus resize shrink width 40 px ; resize shrink height 20 px
    bindsym equal resize grow width 40 px ; resize grow height 20 px

    bindsym q mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

bar {
    # set $font Source Code Pro 9
    # set $font mononoki Nerd Font 10
    # set $font SauceCodePro Nerd Font 10
    # set $font Hack Nerd Font Mono 9
    # set $font Perfect DOS VGA 437 Win 11
    set $font Iosevka Nerd Font 10
    # set $font SauceCodePro Nerd Font 10
    # set $font FantasqueSansMono Nerd Font 12
    # set $font monospace 10
    font pango: $font
    i3bar_command i3bar --transparency
    status_command i3blocks -c ~/.config/i3blocks/config
    strip_workspace_numbers yes
    binding_mode_indicator yes
    workspace_buttons yes
    #separator_symbol "╱"
    #separator_symbol "│"
    #separator_symbol "⁝"
    binding_mode_indicator no
    position top
    # dock, hide
    mode dock
    tray_output primary
    output primary

    set $b0 #3333338f
    set $b1 #eeeeee
    set $b2 #999999
    set $b3 #000000
    set $b4 #900000

    colors {
        background $b0
        statusline $b3
        separator  $b2

        # class              border background color
        focused_workspace    $b1 $b1 $b3
        inactive_workspace   $b1 $b1 $b2
        active_workspace     $b1 $b1 $b2
        urgent_workspace     $b1 $b1 $b4
        binding_mode         $b1 $b1 $b3
    }
}
bar {
    # font pango: SauceCodePro Nerd Font 10
    font pango: $font
    status_command i3blocks -c ~/.config/i3blocks/bottom
    i3bar_command i3bar --transparency
    workspace_buttons no
    separator_symbol "│"
    position bottom
    output primary
    mode dock
    tray_output none
    colors {
        background $b0
        statusline #000000
        separator  #999999
        binding_mode         $b1 $b1 $b3
    }
}

