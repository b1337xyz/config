#!/bin/sh
df -x tmpfs -x devtmpfs | awk '!/^Filesystem|\/boot$/{
    if ($6 != "/") {
        split($6, a, "/")
        mp = a[length(a)]
    } else {
        mp = "root"
    }
    mp = substr(mp, 1, 10)
    printf("${lua ljust 10 %s} ${lua rjust 9 ${fs_free %s}} â”Š ${lua rjust 9 ${fs_size %s}} \
${fs_bar 10,120 %s} ${fs_used_perc %s}%%\n", mp, $6, $6, $6, $6)}
'
