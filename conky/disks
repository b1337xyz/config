#!/bin/sh
df -x tmpfs -x devtmpfs | awk '!/^Filesystem|\/boot$/{
    if ($6 != "/") {
        split($6, a, "/")
        mp = a[length(a)]
    } else {
        mp = "root"
    }
    mp = substr(mp, 1, 10)
    printf("%s ${goto 90} ${fs_free %s} \
${goto 185}â”Š${fs_size %s} ${goto 290}${fs_bar 10,170 %s} ${fs_used_perc %s}%%\n", mp, $6, $6, $6, $6)}
'
